{
    "target_path": "/files/tmp_loadtest",
    "loop_interval_seconds": 300,
    "log_level": "INFO",
    "log_file": "filesystem_load_test.log",
    "enabled_tests": [
        "fio_random_read_write",
        "clone_cnc_repo",
        "install_pandas",
        "install_ml_stack",
        "load_pandas"
    ],
    "test_definitions": {
        "clone_cnc_repo": {
            "type": "git_clone",
            "repository_url": "https://github.com/electronicarts/CnC_Remastered_Collection.git",
            "description": "Clone ~1400 files, ~45 MB in total"
        },
        "install_pandas": {
            "type": "virtualenv_install",
            "packages": [
                "pandas"
            ],
            "description": "Create virtual environment and install pandas"
        },
        "install_ml_stack": {
            "type": "virtualenv_install",
            "packages": [
                "pandas",
                "numpy",
                "scikit-learn"
            ],
            "description": "Create virtual environment and install ML packages"
        },
        "load_pandas": {
            "type": "pandas_load",
            "description": "Test pandas loading performance with cold starts",
            "setup_required": true
        },
        "fio_random_read_write": {
            "type": "fio",
            "description": "FIO random read/write test with 4K block size, for 5 seconds",
            "fio_params": [
                "--name=randrw",
                "--ioengine=libaio",
                "--direct=1",
                "--rw=randrw",
                "--rwmixread=70",
                "--bs=4k",
                "--size=100M",
                "--numjobs=4",
                "--runtime=5",
                "--time_based",
                "--group_reporting"
            ]
        }
    },
    "database": {
        "host": "loadtest.postgres.database.azure.com",
        "port": 5432,
        "database": "postgres",
        "user": "loadtest"
    }
}
