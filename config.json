{
    "setup_id": "nuvolos_staging",
    "target_path": "/files/tmp_loadtest",
    "loop_interval_seconds": 300,
    "log_level": "DEBUG",
    "log_file": "filesystem_load_test.log",
    "enabled_tests": [
        "clone_hello_world",
        "clone_python_examples",
        "clone_large_repo",
        "install_pandas",
        "install_ml_stack",
        "load_pandas"
    ],
    "test_definitions": {
        "clone_hello_world": {
            "type": "git_clone",
            "repository_url": "https://github.com/octocat/Hello-World.git",
            "description": "Clone small repository to test basic filesystem write performance"
        },
        "clone_python_examples": {
            "type": "git_clone",
            "repository_url": "https://github.com/geekcomputers/Python.git",
            "description": "Clone medium-sized Python examples repository"
        },
        "clone_large_repo": {
            "type": "git_clone",
            "repository_url": "https://github.com/electronicarts/CnC_Remastered_Collection.git",
            "description": "Clone large repository to test heavy filesystem operations"
        },
        "install_pandas": {
            "type": "virtualenv_install",
            "packages": [
                "pandas"
            ],
            "description": "Create virtual environment and install pandas"
        },
        "install_ml_stack": {
            "type": "virtualenv_install",
            "packages": [
                "pandas",
                "numpy",
                "scikit-learn"
            ],
            "description": "Create virtual environment and install ML packages"
        },
        "load_pandas": {
            "type": "pandas_load",
            "description": "Test pandas loading performance with cold starts",
            "setup_required": true
        }
    },
    "database": {
        "host": "loadtest.postgres.database.azure.com",
        "port": 5432,
        "database": "postgres",
        "user": "loadtest"
    }
}
